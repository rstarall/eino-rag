# RAG Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
CHUNKING_STRATEGY=length
TOP_K=5
SCORE_THRESHOLD=0.7
EMBEDDING_CACHE=true

# Authentication Configuration
JWT_SECRET=your-secret-key-here
